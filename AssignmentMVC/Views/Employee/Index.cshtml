
@*Searching*@
@using (Html.BeginForm("Searching", "Employee", FormMethod.Get))
{
    <p>
        Search: @Html.TextBox("searchString")
        <input type="submit" value="Search" />
    </p>
}


 <!-- Displaying Error Message-->
@if (!string.IsNullOrEmpty(ViewData["ErrorMessage"] as string))
{
    <div class="alert alert-warning">
        @ViewData["ErrorMessage"]
    </div>
}


else if(Model != null && Model.Count > 0)
{
    <h1 class="table-heading">Employees Table with Total Working Time</h1>
    <hr />

    <table class="styled-table">
        <tr>
            <th>Name</th>
            <th>Total Time Worked (hours)</th>
        </tr>



        @foreach (var employee in Model)
        {
            <tr class="@(employee.TotalWorkingTime < 100 ? "low-total-time" : "")">
                <td>@employee.EmployeeName</td>
                <td>@employee.TotalWorkingTime</td>
            </tr>
        }
    </table>
}
else
{
    <p>No data available.</p>

    <div class="alert alert-warning">
        @ViewData["HTTPErrorMessage"]
    </div>
}







